<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintTop_toBottomOf="@+id/imgHeader"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:contentDescription="@string/header_image"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_label"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/imgHeader"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvNameValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/name_value"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvNameLabel"
        app:layout_constraintStart_toEndOf="@id/tvNameLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tvOrgLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/org_label"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvNameLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvOrgValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/org_value"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvOrgLabel"
        app:layout_constraintStart_toEndOf="@id/tvOrgLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <ImageButton
        android:id="@+id/btnCall"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/call"
        android:src="@android:drawable/ic_menu_call"
        app:layout_constraintTop_toBottomOf="@id/tvOrgLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_value"
        android:textSize="18sp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/btnCall"
        app:layout_constraintStart_toEndOf="@id/btnCall" />

    <TextView
        android:id="@+id/tvPhoneType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_type"
        android:textSize="12sp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvPhone"
        app:layout_constraintStart_toEndOf="@id/btnCall" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>